  <!-- Myservlet -->
   <servlet>
  	<servlet-name>new</servlet-name>
  	<servlet-class>com.enterprise.MyServlet</servlet-class>
  	
  	<!--initial parameters setup using servlet configuration  -->
  	  <init-param>
  		<param-name>name</param-name>
  		<param-value>Aji</param-value>
  	</init-param>
  	 	
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>new</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  
  <!-- Initial value configuration: servlet config and servlet context -->
  <context-param>
  	<param-name>name</param-name>
  	<param-value>Ajmi</param-value>
  </context-param>
    <context-param>
  	<param-name>phone</param-name>
